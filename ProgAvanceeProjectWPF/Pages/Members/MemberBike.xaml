<Page x:Class="ProgAvanceeProjectWPF.Pages.Members.MemberBike"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgAvanceeProjectWPF.Pages.Members"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MemberBike">

    <Grid>
        <Label Content="Gestion des velos" HorizontalAlignment="Left" Height="29" Margin="327,85,0,0" VerticalAlignment="Top" Width="128" Foreground="White"/>
        <DataGrid Name="BikesGrid" AutoGenerateColumns="false" Margin="191,123,0,0" Height="181" VerticalAlignment="Top" HorizontalAlignment="Left" Width="405">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Poids" Binding="{Binding Weight}"/>
                <DataGridTextColumn Header="Longueur" Binding="{Binding Length}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Ajouter un nouveau velo" HorizontalAlignment="Left" Height="65" Margin="295,330,0,0" VerticalAlignment="Top" Width="192"/>
        <Button Content="retour" HorizontalAlignment="Left" Margin="745,388,0,0" VerticalAlignment="Top" Click="ReturnBtn"/>

    </Grid>
</Page>
