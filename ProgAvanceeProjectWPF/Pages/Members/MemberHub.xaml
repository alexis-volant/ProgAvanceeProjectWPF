<Page x:Class="ProgAvanceeProjectWPF.Pages.Members.MemberHub"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgAvanceeProjectWPF.Pages.Members"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Button Content="Gestion des velos" HorizontalAlignment="Left" Height="54" Margin="559,140,0,0" VerticalAlignment="Top" Width="167" Click="GoToMemberBikePage"/>
        <Button Content="Ajout de catégorie" HorizontalAlignment="Left" Height="54" Margin="415,216,0,0" VerticalAlignment="Top" Width="167" Click="AddCategory"/>
        <Button Content="S'inscrire a une balade" HorizontalAlignment="Left" Height="54" Margin="559,300,0,0" VerticalAlignment="Top" Width="167" Click="GoToMemberInscriptionPage"/>
        <DataGrid Name="RidesGrid" AutoGenerateColumns="false" Margin="60,149,0,0" Height="181" VerticalAlignment="Top" HorizontalAlignment="Left" Width="162">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jour" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Weight}"/>

            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="ListCat" HorizontalAlignment="Left" Margin="262,200,0,0" VerticalAlignment="Top" Width="126" Height="118"/>
        <Label Content="Balades reservées" HorizontalAlignment="Left" Margin="210,113,0,0" VerticalAlignment="Top" Width="126" Foreground="White"/>
    </Grid>
</Page>
