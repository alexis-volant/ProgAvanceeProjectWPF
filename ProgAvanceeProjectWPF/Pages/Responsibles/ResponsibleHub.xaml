<Page x:Class="ProgAvanceeProjectWPF.Pages.Responsibles.ResponsibleHub"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgAvanceeProjectWPF.Pages.Responsibles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResponsibleHub">

    <Grid>
        <Label Content="Récapitulatif des balades" Margin="63,124,0,0" Foreground="White" FontSize="24" Height="49" VerticalAlignment="Top" HorizontalAlignment="Left" Width="281"></Label>
        <DataGrid Name="RidesGrid" AutoGenerateColumns="false" Margin="63,178,0,0" Height="181" VerticalAlignment="Top" HorizontalAlignment="Left" Width="405">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Départ" Binding="{Binding PlaceDeparture}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DateDeparture}"/>
                <DataGridTextColumn Header="Prix" Binding="{Binding PackageFee}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="RideManagmentButton" Content="Gestion des balades" Foreground="White" FontSize="24" Background="#42414d"  Margin="530,226,0,0" Height="42" VerticalAlignment="Top" HorizontalAlignment="Left" Width="226"></Button>
    </Grid>
</Page>
